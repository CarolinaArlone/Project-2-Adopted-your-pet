<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Contacta</h1>
            <hr>
            <form action="/contacto/{{id}}" method="POST">

                <div class="row">

                    <div class="col">

                        <div class="mb-3">
                            <label for="subject" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="subject" name="subject">
                        </div>

                    </div>

                    <div class="col">

                        <div class="mb-3">
                            <label for="name" class="form-label">Asunto</label>
                            <input type="text" class="form-control" id="name" name="name">
                        </div>

                    </div>

                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email">
                </div>

                <div class="mb-3">
                    <label for="message" class="form-label">Mensaje</label>
                    <input type="text" class="form-control" id="message" name="message">
                </div>


                <input type="text" class="form-control" id="message" name="ownerEmail" value={{owner.email}} hidden>

                <button type="submit" class="btn btn-dark mt-3">Enviar formulario de adopci√≥n</button>
            </form>

        </div>
    </div>

</div>