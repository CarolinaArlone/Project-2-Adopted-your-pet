<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Formulario adopción</h1>

            <hr>

            <form action="/albergue/formulario-adopcion/{{thisId}}" method="POST">
                <div class="mb-3">
                    <label>Nombre
                        <input name="name" type="text" value="name">
                    </label>

                </div>
                <div class="mb-3">
                    <label for="owner" class="form-label">Seleccionar</label>
                    <select name="owner" class="form-select">
                        {{#each allUsers}}
                        <option value={{_id}}>{{username}}</option>
                        {{/each}}

                    </select>
                </div>

                <input type="submit" value="Aceptar adopción">

            </form>



        </div>

    </div>

</div>