<div class="container">
<div class="row justify-content-center">
    <div class="col-md-6">
        <h1>Formulario adopci√≥n</h1>

        <hr>

        <form action="/perros/crear" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label>Name
                    <input name="name" type="text">
                </label>

            </div>

            <div class="mb-3">
                <label>Fecha de nacimiento
                    <input name="birth" type="date">
                </label>
            </div>
            <div class="mb-3">
                <label>Description
                    <input name="description" type="text">
                </label>
            </div>

            <div class="mb-3">
                <label>
                    <input name="avatar" type="file">
                </label>

            </div>

            <div class="mb-3">
                <label for="cast" class="form-label">Seleccionar</label>
                <select name="cast" class="form-select">
                    {{#each allUsers}}
                    <option value={{id}}>{{name}}</option>
                    {{/each}}

                </select>
            </div>

            <div class="mb-3">
                <input type="submit" value="Registrar perro">

        </form>



    </div>

</div>

</div>